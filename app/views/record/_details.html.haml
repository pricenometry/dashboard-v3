.panel.panel-default
  .panel-heading
    %h4 Details
  .panel-body
    - if user_signed_in?
      - if current_user.admin?
        %ul.list-group
          - @result.each do |key, value|
            %li.list-group-item
              %span.badge= key.upcase
              = value
          - if @history.presence
            - @history.each do |key, value|
              %li.list-group-item
                %strong
                  = key.upcase.to_s + ' HISTORY'
                %ul.list-group
                  - value.each do |k,v|
                    %li.list-group-item
                      %span.badge= k.upcase
                      = v
    %ul.list-group
      - @result.each do |key, value|
        - if @canonical_details.include?(key)
          %li.list-group-item
            %span.badge= key.upcase
            = value
    .clearfix
      - if @result[:description]
        - @result[:description].split('. ').shuffle.each do |sentence|
          %p{align: 'left'}
            #{sentence}.
    = linkedin_button
= render 'layouts/responsive_ad'
