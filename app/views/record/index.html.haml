.main-product.hidden-768
  .box-1675
    / Bread Сrumbs Start
    .main-bread
      .container-fluid
        .row
          .block-bread
            %span
              %a{:href => "/"} Back
            %span
              %i.fa.fa-angle-right{"aria-hidden" => "true"}
              %a{:href => "/"}= image_tag "#{@result[:container]}.png"
            - if @result[:categories].presence
              - @result[:categories].each do |category|
                %span
                  %i.fa.fa-angle-right{"aria-hidden" => "true"}>
                  %a{:href => "/search/#{category}"}= category
            %span
              %i.fa.fa-angle-right{"aria-hidden" => "true"}>
              %a{:href => "/search/#{@result[:name]}"}= @result[:name]
    / Bread Сrumbs End
    .row
      .col-md-6.col-sm-5.col-xs-12
        .block-cart-product
          #block-img-product.block-img-product
            #full-img-product.full-img-product
              - if @result[:image]
                %img{:alt => "", :src => @result[:image]}
              - else
                = image_tag "thumbnail.jpg"
            .box-preview-img-product
              .soc-wrap
                %a{:href => "https://twitter.com/intent/tweet?text=Realtime%20Price%20Trending%20for%20#{@result[:name]}&url=https://pricenometry.com/#{@result[:container]}/#{@result[:id]}&via=Pricenometry&related=bastosmichael", :target => "_blank"}
                  %i.fa.fa-twitter{"aria-hidden" => "true"}
                %a{:href => "https://facebook.com/sharer.php?u=https://pricenometry.com/#{@result[:container]}/#{@result[:id]}", :target => "_blank"}
                  %i.fa.fa-facebook{"aria-hidden" => "true"}
                %a{:href => "https://plus.google.com/share?url=https://pricenometry.com/#{@result[:container]}/#{@result[:id]}", :target => "_blank"}
                  %i.fa.fa-google-plus{"aria-hidden" => "true"}
                %a{:href => "https://www.linkedin.com/shareArticle?url=https://pricenometry.com/#{@result[:container]}/#{@result[:id]}&title=Realtime%20Price%20Trending%20for%20#{@result[:name]}", :target => "_blank"}
                  %i.fa.fa-linkedin{"aria-hidden" => "true"}
                %a{:href => "https://www.reddit.com/submit?url=https://pricenometry.com/#{@result[:container]}/#{@result[:id]}&title=Realtime%20Price%20Trending%20for%20#{@result[:name]}", :target => "_blank"}
                  %i.fa.fa-reddit{"aria-hidden" => "true"}
      .col-md-6.col-sm-7.col-xs-12
        .block-decr-product
          .title
            = icon('line-chart')
            = @result[:name]
          .undertitle
            .brand-name= @result[:availability].presence || 'Available'
            .wrap-info-product
          #context-desdr.description
            - if @history && @history[:price].presence
              = line_chart @history[:price], min: @min_price, max: @max_price
          .wrap-cost
            .box-price
              .wrap-price
                %p= image_tag "#{@result[:container]}.png"
                - if @result[:price][:price] && @result[:price][:original_price]
                  %span.price-strike
                    $#{@result[:price][:original_price]}
                  %span.price-normal
                    = icon('tag')
                    $#{@result[:price][:price]}
                - elsif @result[:price][:price]
                  %span.price-normal
                    = icon('tag')
                    $#{@result[:price][:price]}
                - elsif @result[:price][:original_price]
                  %span.price-normal
                    = icon('tag')
                    $#{@result[:price][:original_price]}
            .box-add-cart-product
              - if @result[:container] == 'amazon-offers'
                = render 'search/amazon_button', result: @result
              - elsif @result[:container] == 'walmart-offers'
                = render 'search/walmart_button', result: @result
              - elsif @result[:container] == 'target-offers'
                %a.add-cart-product.button-small.waves-effect.waves-circle.waves-float{href: "/#{@result[:container]}/#{@result[:id]}"}
                  \#BoycottTarget
              - else
                %a.add-cart-product.button-small.waves-effect.waves-circle.waves-float{:href => @result[:url], target: '_blank'}
                  = icon('shopping-cart')
                  = "Buy at #{@result[:container].split('-').first.capitalize}"
    - if @related.presence
      .row
        .related-products
          .title
            = icon('bar-chart')
            Compare Pricing
          #owl-carousel.owl-carousel.owl-theme
            - @related.each_with_index do |result, index|
              .wrap-item
                .item
                  %a{:href => "/#{result[:container]}/#{result[:id]}"}
                    .image
                      - if result[:image]
                        %img{:style => "width: 100%; height: 140px;", :alt => "#{result[:name]}", :src => "#{result[:image]}"}/
                      - else
                        = image_tag "thumbnail.jpg", :style => "width: 100%; height: 140px;", :alt => "#{result[:name]}"
                    .name-products
                      = result[:name]
                      %p= image_tag "#{result[:container]}.png"
                    .model-products
                      #{result[:availability].presence || 'Available'}
                  .price-products
                    %span.now
                    - if @result[:price][:price]
                      %span.now
                        = icon('tag')
                        $#{result[:price][:price]}
                    - elsif result[:price][:original_price]
                      %span.now
                        = icon('tag')
                        $#{result[:price][:original_price]}
                  .box-hide-related
                    - if @result[:container] == 'amazon-offers'
                      = render 'search/amazon_button', result: @result
                    - elsif @result[:container] == 'walmart-offers'
                      = render 'search/walmart_button', result: @result
                    - elsif @result[:container] == 'target-offers'
                      %a.add-cart-product.button-small.waves-effect.waves-circle.waves-float{href: "/#{@result[:container]}/#{@result[:id]}"}
                        \#BoycottTarget
                    - else
                      %a.add-cart-product.button-small.waves-effect.waves-circle.waves-float{:href => @result[:url], target: '_blank'}
                        = icon('shopping-cart')
                        = "Buy at #{@result[:container].split('-').first.capitalize}"
    #tabs_cart_product
      %ul
        %li
          %a{:href => "#tabs-1"}
            = icon('pie-chart')
            Social Popularity
        %li
          %a{:href => "#tabs-2"}
            = icon('calendar-check-o')
            Specifications
        %li
          %a{:href => "#tabs-3"}
            = icon('info')
            Description
      #tabs-1
        - if @result[:social].presence
          .row
            .col-md-6.col-sm-5.col-xs-12
              = pie_chart @result[:social].select {|k,v| k != :total_shares }
            .col-md-6.col-sm-7.col-xs-12
              = bar_chart @result[:social].select {|k,v| k != :total_shares }
        - if @social_charts.presence
          .row
            = line_chart @social_charts
        .row
          .fb-comments{"data-width" => "100%", "data-href" => "https://pricenometry.com/#{@result[:container]}/#{@result[:id]}", "data-numposts" => "5", "order_by" => "reverse_time"}
      #tabs-2
        %table
          %tbody
            - @result.each do |key, value|
              - if @canonical_details.include?(key)
                %tr
                  %td= key
                  %td= value
      #tabs-3
        - if @result[:description].presence
          - @result[:description].split('. ').shuffle.each do |sentence|
            %p{align: 'left'}
              #{sentence}.
