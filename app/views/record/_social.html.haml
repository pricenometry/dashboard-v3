- if @result[:social].presence
  .panel.panel-default
    .panel-heading
      %h4
        = icon('pie-chart')
        Social Popularity
    .panel-body
      = pie_chart @result[:social].select {|k,v| k != :total_shares }
      = bar_chart @result[:social].select {|k,v| k != :total_shares }
      - if @social_charts.presence
        = line_chart @social_charts
      - unless browser.bot?
        = linkedin_button
      .fb-comments{"data-href" => "#{@result[:url]}", "data-numposts" => "5", "order_by" => "reverse_time"}
