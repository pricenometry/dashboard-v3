.container-fluid.text-center
  = render 'layouts/search'
  .full.col-sm-12
    / content
    .row
      / main col left
      .col-md-9.col-sm-8
        #welcome.page-header
          %h1
            = content_for?(:h1) ? yield(:h1) : Rails.configuration.config[:site][:slogan]
            %br
            %small
              = content_for?(:h3) ? yield(:h3) : Rails.configuration.config[:site][:description]
        .row
          - @available.each do |name, count|
            .col-md-4{align: 'center'}
              = image_tag "#{name}.png", :class => 'logo'
              #{count}
        .row
          .col-md-4{align: 'center'}
            %strong Indexing
            %p #{@indexing}
          .col-md-4{align: 'center'}
            %strong Processing
            %p #{@processing}
          .col-md-4{align: 'center'}
            %strong Pending
            %p #{@pending}
      .col-md-3.col-sm-4.text-center
        = render 'layouts/responsive_ad'
= content_for :title, "Pricenometry.com: Track and Search Anything Online with a Price Tag in Realtime"
= content_for :description, "Get up to the minute price history and analysis as well as social network popularity, product videos, news trends and more only at Pricenometry.com"
