!!!
%html
  %head
    = display_meta_tags
    %meta{name:"msvalidate.01", content: "E343FD8E4D0D68E0349D841AFFFE6EEF"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    - if user_signed_in?
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/highcharts/4.2.3/highcharts.js", "chartkick"
    - else
      = javascript_include_tag "//www.google.com/jsapi", "chartkick"
    = csrf_meta_tags
    = analytics_init if GoogleAnalytics.valid_tracker?
    = yield(:head)
    %script{:async => "", :src => "//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"}
    :javascript
        window.fbAsyncInit = function() {
          FB.init({
            appId      : '1008307585917302',
            xfbml      : true,
            version    : 'v2.5'
          });
        };

        (function(d, s, id){
           var js, fjs = d.getElementsByTagName(s)[0];
           if (d.getElementById(id)) {return;}
           js = d.createElement(s); js.id = id;
           js.src = "//connect.facebook.net/en_US/sdk.js";
           fjs.parentNode.insertBefore(js, fjs);
         }(document, 'script', 'facebook-jssdk'));
    :javascript
        (function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.6&appId=1008307585917302";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

  %body{:class => "#{controller_name} #{action_name}"}
    #header
      / Page Header Start
      .top-menu-mob
        / Top Line Mobile Start
        .header-top-mob
          %button#js-mnu_container.mnu_container
            %span.sandwich
              %span.sw-topper
              %span.sw-bottom
              %span.sw-footer
          #mnu-popup-mob.mnu-popup-mob
            .header-top-mob
              .logo-popup-mob
                %a{:href => "/"} Pricenometry
            %nav#mnu-toggle.mnu-toggle
              = form_tag(search_path, :method => "get", :class => 'search-form-mob') do

                %i.fa.fa-search{"aria-hidden" => "true"}
                %input.submit-search-mob{:type => "submit", :value => ""}/
                %input#input-search-mob.input-search-mob{:type => "text", :name => 'query', :value => @query, :autocomplete => "off", :placeholder => "What Product Are You Looking For?"}
                #clear-searh-mob.clear-searh-mob
              %ul
                %li
                  %a{:href => "/"} Home
                %li
                  %a{:href => "http://about.pricenometry.com/what-we-do/", :target => "_blank"} What We Do?
                %li
                  %a{:href => "http://about.pricenometry.com/", :target => "_blank"} Blog
                %li
                  %a{:href => "http://developers.pricenometry.com/", :target => "_blank"} Developer API
                %li
                  %a{:href => "http://about.pricenometry.com/get-access/", :target => "_blank"} Get Access
                %li
                  %a{:href => "/", :target => "_blank"} Terms of Service
                %li
                  %a{:href => "/", :target => "_blank"} Privacy Policy
              %ul
                %li
                  %a{:href => "https://facebook.com/Pricenometry", :target => "_blank"} Facebook
                %li
                  %a{:href => "https://twitter.com/Pricenometry", :target => "_blank"} Twitter
                %li
                  %a{:href => "https://instagram.com/Pricenometry", :target => "_blank"} Instagram
                %li
                  %a{:href => "https://www.linkedin.com/showcase/18125556/", :target => "_blank"} LinkedIn
                %li
                  %a{:href => "https://github.com/Pricenometry", :target => "_blank"} Github
          .logo-mob
            %a{:href => "/"} Pricenometry
      / Top Line Mobile End
      .header-top
        / Top Menu Desktop  Start
        .box-1675
          .col-md-12
            .row
              #top-left.top-left
                %ul
                  %li
                    %a{:href => "/"} Home
                  %li
                    %a{:href => "http://about.pricenometry.com/what-we-do/", :target => "_blank"} What We Do?
                  %li
                    %a{:href => "http://about.pricenometry.com/", :target => "_blank"} Blog
              #top-right.top-right
                %ul
                  %li
                    %a{:href => "http://developers.pricenometry.com/", :target => "_blank"} Developer API
                  %li
                    %a{:href => "http://about.pricenometry.com/get-access/", :target => "_blank"} Get Access
                  %li
                    %a#js-account{:href => "/", :target => "_blank"} Terms of Service
                  %li
                    %a#js-account{:href => "/", :target => "_blank"} Privacy Policy
      / Top Menu Desktop  End
      .header-center
        / Center Menu Desktop  Start
        .box-1675
          .col-md-12
            .row
              #col-size-logo.col-size-logo
                %a.logo{:href => "/"} Pricenometry
              = render 'layouts/search'
              #col-size-buy.col-size-buy
                .box-buy
                  .box-inven
      / Center Menu Desktop  End
      / Bottom Menu Desktop  Start
      .header-bottom
        .box-1675
          .col-md-12
            .row
              .main-menu
                %ul.ul-main-menu
                  %li
                    %a{:href => "https://facebook.com/Pricenometry", :target => "_blank"} Facebook
                  %li
                    %a{:href => "https://twitter.com/Pricenometry", :target => "_blank"} Twitter
                  %li
                    %a{:href => "https://instagram.com/Pricenometry", :target => "_blank"} Instagram
                  %li
                    %a{:href => "https://www.linkedin.com/showcase/18125556/", :target => "_blank"} LinkedIn
                  %li
                    %a{:href => "https://github.com/Pricenometry", :target => "_blank"} Github
    = render 'layouts/messages'
    = yield

    #footer
      / Page Footer Start
      = render 'layouts/responsive_text_ad'
      .footer
        .box-1675
          .container-fluid
            .row
      .copyright
        .box-1675
          .container-fluid
            .row
              .text-copyright
                Copyright Â© 2017 Pricenometry. All Rights Reserved
      / Footer End

