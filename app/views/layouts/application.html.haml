        %ul.nav.nav-pills.nav-stacked
          %li
            %a{:href => 'https://www.facebook.com/Pricenometry'} Facebook
          %li
            %a{:href => 'https://twitter.com/Pricenometry'} Twitter
      .col-md-3
        %ul.nav.nav-pills.nav-stacked
          %li
            %a{:href => 'http://developers.pricenometry.com'} Developer API
          %li
            %a{:href => 'http://about.pricenometry.com/get-access/'} Get Access
      .col-md-3
        %ul.nav.nav-pills.nav-stacked
          %li
            %a{:href => 'http://about.pricenometry.com/'} Blog
  %hr
    .row
      .col-lg-12
        %ul.nav.nav-pills.nav-justified
          %li
            %a{:href => "/"} &copy; #{Rails.configuration.config[:site][:name]}
